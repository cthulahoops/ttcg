{
  "name": "ttcg",
  "version": "1.0.0",
  "type": "module",
  "description": "Lord of the Rings-themed trick-taking card game",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
