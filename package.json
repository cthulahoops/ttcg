{
  "name": "ttcg",
  "version": "1.0.0",
  "type": "module",
  "description": "Lord of the Rings-themed trick-taking card game",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "bun --watch server/server.ts",
    "dev:client": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "check": "tsc && bun run lint && bun run format:check",
    "typecheck": "tsc",
    "test": "bun test",
    "lint": "eslint client server shared",
    "format": "prettier --write client server shared",
    "format:check": "prettier --check client server shared",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "None",
  "dependencies": {
    "@types/bun": "^1.3.5",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "prettier": "^3.8.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vite": "^7.3.1"
  }
}
